<table class="tl_cumulated multiplechoice" summary="{{ summary }}">
    <thead>
        <tr>
            <th colspan="2">{{ answer }}</th>
            <th>{{ nrOfSelections }}</th>
        </tr>
    </thead>
    <tbody>
{% set counter = 1 %}
{% for id, choice in choices %}
        <tr>
            <td class="counter">{{ counter }}.</td>
            <td class="answer">{{ choice }}</td>
            <td class="selections">{% if statistics['cumulated'][id+1] %}{{ statistics['cumulated'][id+1] }}{%else %}0{% endif %}</td>
        </tr>
{% set counter = counter + 1 %}
{% endfor %}
