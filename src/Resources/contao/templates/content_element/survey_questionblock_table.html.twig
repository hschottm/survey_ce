<table class="surveytable qid-{{ surveypage.id }}">
{% for objWidget in surveypage %}
        <tr>
{% if objWidget.showTitle %}
            <td class="titlecolumn">
                {{ objWidget.title }}{% if objWidget.mandatory %}<span class="mandatory">*</span>{% endif %}
                {% if objWidget.help|length %}<div class="help">{{ objWidget.help }}</div>{% endif %}
            </td>
{%endif %}
            <td class="questioncolumn">
{% if objWidget.question|length %}
                <div class="question">{{ objWidget.question|raw }}</div>
{% endif %}
                <div class="widget {{ objWidget.class }}">
                    {{ objWidget.generateLabel()|raw }} {{ objWidget.generateWithError()|raw }}
                </div>
            </td>
        </tr>
{% endfor %}
    </table>